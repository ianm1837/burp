
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="mb-4">Create an Account</h1>
        <form id="createAccountForm" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="inputName" class="form-label">Username</label>
            <input id="username-signup" type="text" class="form-control" id="inputName" placeholder="Enter your name">
          </div>
          <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input id="password-signup" type="password" class="form-control" id="inputPassword" placeholder="Enter your password">
          </div>
          <div class="mb-3">
            <label for="inputConfirmPassword" class="form-label">Confirm Password</label>
            <input id="password-signup-confirm" type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm your password">
          </div>
          <button id="signup-button" class="btn btn-primary">Sign up</button>
          <a href="/user/login">Login instead</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
