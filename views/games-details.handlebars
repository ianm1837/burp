<div class="container d-flex flex-column align-items-center h-100 mt-3">
  <div class="card mb-3 p-3 w-75">
    {{!-- <a href="/posts/view-post/{{post.id}}"></a> --}}

    <img style="max-height: 40em;object-fit: contain;" class="rounded" src="{{game.game_image}}" alt="Card image cap"></img>

    <h3 id="post-title" data-post-number="{{game.id}}" class="card-title mt-5"> {{game.title}} </h3></a>
    <h8 class="card-subtitle mb-2 text-muted fw-light border-bottom border-secondary ">
      {{!-- {{post.timestamp}} --}}
      </h8>
    <p class="card-text">{{game.description}}</p>
  </div>

  <div class="w-75 d-flex flex-column align-items-center">
    {{#each game.posts as |post|}}
    <div class="card mb-3 ml-3 mr-3 p-3 w-75">
      <h8 class="card-subtitle mb-2 text-muted fw-light border-bottom border-secondary ">@{{comment.username}}
        {{post.timestamp}}</h8>
      <p id="db-comment-content-{{post.id}}" class="card-text">{{post.title}}</p>
    </div>
    {{/ each }}

    {{#if loginStatus}}
    <div class="card mb-3 p-3 w-75">
      <h5 class="card-title">Create a New Post</h5>
      <form>
        <div class="form-group">
          <label for="new-post-title">Post Title</label>
          <input id="comment-content" class="form-control" id="new-post-content" name="post-content" ></input>
          <label for="new-post-content">Post Content</label>
          <textarea id="comment-content" class="form-control" id="new-post-content" name="post-content" rows="3"></textarea>
        </div>
        <div class="mt-1">
          <button id="post-comment-button" type="submit" class="btn btn-primary">Submit</button>
        </div>
        
      </form>
    </div>
    {{/if}}
  </div>
</div>