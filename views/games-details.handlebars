<div class="container d-flex flex-column align-items-center h-100 mt-3">
  <div class="card mb-3 p-3 w-75">
    {{!-- <a href="/posts/view-post/{{post.id}}"></a> --}}
    <img style="max-height: 40em;object-fit: contain;" class="rounded" src="{{game.game_image}}" alt="Card image cap"></img>
    <h3 id="post-title" data-post-number="{{game.id}}" class="card-title mt-5"> {{game.title}} </h3></a>
    <h8 class="card-subtitle mb-2 text-muted fw-light border-bottom border-secondary ">
      {{!-- {{post.timestamp}} --}}
    </h8>
    <p class="card-text">{{game.description}}</p>
  </div>

  <div class="w-75 d-flex flex-column align-items-center">
    {{#each posts as |post|}}
    <a href="/posts/details/{{post.id}}" class="text-reset link-secondary w-100 d-flex flex-column align-items-center">
      <div class="card mb-3 ml-3 mr-3 p-3 w-75">
        <h6 class="card-subtitle mb-2 text-muted fw-light border-bottom border-secondary ">
          @{{post.user.username}}
        </h6>
        <p id="db-comment-content-{{post.id}}" class="card-text">{{post.title}}</p>
      </div>
    </a>
    {{/ each }}

    {{#if loginStatus}}
    <div class="card mb-3 p-3 w-75">
      <h5 class="card-title">Create a New Post</h5>
      <form id="postForm" enctype="multipart/form-data">
        <div id="newPostGame" class="form-group" data-game="{{game.id}}">
          <label for="new-post-title">Post Title</label>
          <input id="newPostTitle" class="form-control" name="newPostTitle" type="text" required></input>

          <label for="new-post-content">Post Content</label>
          <textarea id="newPostContent" class="form-control" name="newPostContent" rows="3" type="text" required></textarea>
        </div>
        <div class="mt-1">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    {{/if}}
  </div>
</div>